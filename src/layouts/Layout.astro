---
import Footer from '@src/components/Footer.component.astro'
import Header from '@src/components/Header.component.astro'
import { CartDrawer } from '@src/components/react'
import '@fontsource-variable/onest'
import ContactStrip from '@src/components/ContactStrip.component.astro'
import WhatsappFloatButton from '@src/components/WhatsappFloatButton.component.astro'
import GoogleAnalytics from '@src/components/GoogleAnalytics.component.astro'

interface Props {
  title: string;
  description?: string;
}

const { title } = Astro.props as Props

const defaultDescription = 'Venta de servidores, equipos de red, hardware y componentes TI en Perú. ServidorPeru - NET: Las mejores marcas (HPE, Aruba, Dell, Cisco) y precios competitivos en Lima y todo el Perú.'
const pageDescription = Astro.props.description || defaultDescription

const siteKeywords = 'servidores perú, venta servidores lima, equipos de red perú, hardware ti, hpe perú, aruba perú, switches cisco, routers, sfp, transceivers, componentes servidor, servidorperu, servidor peru net, tecnología perú, infraestructura ti';
---

<!doctype html>
<html lang="es-PE">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={pageDescription} />
    <meta name="keywords" content={siteKeywords} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <GoogleAnalytics />
  </head>
  <body>
    <Header />
    <CartDrawer client:only="react" />
    <ContactStrip />
    <main class="mx-5">
      <slot />
    </main>
    <ContactStrip />
    <Footer />
    <WhatsappFloatButton />
  </body>
</html>
<style is:global>
  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: "Onest Variable", sans-serif;
    background: #e9f7ff;
    overflow-x: hidden;
    padding-top: 8rem;
  }
</style>
